<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>sensores</name>
  <version>0.0.1</version>
  <description>Pixhawk reader node that publishes ROS 2 topics via MAVLink</description>
  <license>MIT</license>
  <maintainer email="todo@example.com">TODO</maintainer>

  <depend>rclpy</depend>
  <depend>sensor_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>std_msgs</depend>
  <depend>ament_index_python</depend>
  <exec_depend>python3-pymavlink</exec_depend>
  <exec_depend>python3-serial</exec_depend>
  <exec_depend>python3-pigpio</exec_depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
